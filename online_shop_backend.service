[Unit]
Description=Online Shop Backend Django Application
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/apps/online_shop_backend
ExecStart=/root/apps/online_shop_backend/venv/bin/gunicorn config.wsgi:application --bind 127.0.0.1:8004
Restart=on-failure
RestartSec=5
Environment=DJANGO_SETTINGS_MODULE=config.settings

[Install]
WantedBy=multi-user.target
